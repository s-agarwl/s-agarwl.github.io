# Enable URL rewriting
RewriteEngine On

# Handle direct access to publication pages
RewriteRule ^publication/([^/]+)/?$ index.html [L]

# Handle direct access to publications page
RewriteRule ^publications/?$ index.html [L]

# Redirect all other non-file requests to index.html
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.html [L]