{
  "llm": {
    "enabled": false,
    "provider": "openai",
    "apiKey": "",
    "endpoint": "https://api.openai.com/v1/chat/completions",
    "model": "gpt-3.5-turbo",
    "maxTokens": 100,
    "temperature": 0.3,
    "timeout": 30000
  },
  "targetLengths": {
    "title": 60,
    "description": 150
  },
  "fallback": {
    "title": {
      "maxLength": 60,
      "suffixes": ["| Research Publication", "| Project", "| Talk", "| Blog Post"]
    },
    "description": {
      "maxLength": 150,
      "sentenceBreaks": true
    }
  }
}
